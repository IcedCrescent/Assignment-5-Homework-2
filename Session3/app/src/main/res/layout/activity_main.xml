<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trungspc.session3.MainActivity">

    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_margin="15dp"/>-->

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fb_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:menu_colorNormal="@color/colorAccent"
        app:menu_colorPressed="@color/colorAccent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fb_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_colorPressed="@color/colorAccent"
            android:src="@drawable/ic_brush_black_24dp"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fb_brush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_colorPressed="@color/colorAccent"
            android:src="@drawable/ic_camera_alt_black_24dp"/>
    </com.github.clans.fab.FloatingActionMenu>

    <TextView
        android:id="@+id/tv_no_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No image."
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap + to create a new one."
        android:layout_below="@id/tv_no_image"
        android:layout_centerInParent="true"/>

</RelativeLayout>
