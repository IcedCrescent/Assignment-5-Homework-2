<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="95dp"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_margin="5dp"
    android:onClick="posistionAction">

    <View
        android:id="@+id/v_bookmark"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_story_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/iv_story_photo"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_story_photo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_story_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_story_title"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>